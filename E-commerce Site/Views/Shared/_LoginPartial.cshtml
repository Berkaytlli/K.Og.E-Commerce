@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark d-none d-xxl-block" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><b>Hello</b> @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn-lg btn-outline-danger text-dark"><i class="bi bi-box-arrow-right">LogOut</i></button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-white btn-lg btn-outline-primary mr-2" asp-area="Identity" asp-page="/Account/Register"><i>Register</i></a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark btn-lg btn-outline-success" asp-area="Identity" asp-page="/Account/Login"><i>Login</i></a>
        </li>
    }
</ul>