@page
@model RegisterModel
@using E_commerce_Site.Models
@{
    ViewData["Title"] = "Register";
}

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2><b>Register</b></h2>
            Manage all your lottery effciently
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Input.Name" class="form-control" placeholder="Adı" style="border-radius:15px" />
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Input.Surname" class="form-control" placeholder="Soyadı" style="border-radius:15px">
                <span asp-validation-for="Input.Surname" class="text-danger"></span>
            </div>
            <div class="form-group">

                <input asp-for="Input.Email" class="form-control" placeholder="Email" style="border-radius:15px" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">

                <input asp-for="Input.TelefonNo" class="form-control" placeholder="Telefon" style="border-radius:15px" />
                <span asp-validation-for="Input.TelefonNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Input.Adres" class="form-control" placeholder="Adres" style="border-radius:15px" />
                <span asp-validation-for="Input.Adres" class="text-danger"></span>
            </div>
            <div class="form-group">

                <input asp-for="Input.Semt" class="form-control" placeholder="Semt" style="border-radius:15px" />
                <span asp-validation-for="Input.Semt" class="text-danger"></span>
            </div>
            <div class="form-group">

                <input asp-for="Input.Sehir" class="form-control" placeholder="Şehir" style="border-radius:15px" />
                <span asp-validation-for="Input.Sehir" class="text-danger"></span>
            </div>
            <div class="form-group">

                <input asp-for="Input.PostaKodu" class="form-control" placeholder="Posta Kodu" style="border-radius:15px" />
                <span asp-validation-for="Input.PostaKodu" class="text-danger"></span>
            </div>
            <div class="form-group">

                <input asp-for="Input.Password" class="form-control" placeholder="Şifre" style="border-radius:15px" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">

                <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Şifre Tekrar" style="border-radius:15px" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            @if (User.IsInRole(Diger.Role_Admin))
            {
                <div class="form-group">
                    @Html.DropDownListFor(m => m.Input.Role, Model.Input.RoleList, "Rol Seç", new { @class = "form-control" })
                </div>
            }
            <button type="submit" class="btn btn-outline-info form-control"><i class="bi bi-person-circle"></i>Register</button>
        </form>
    </div>
    <div class="col-md-6 col-md-offset-2">
        <section>
            <h4>Use another service to register.</h4>
            <hr />
            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <div>
                        <p>
                            There are no external authentication services configured. See <a href="https://go.microsoft.com/fwlink/?LinkID=532715">this article</a>
                            for details on setting up this ASP.NET application to support logging in via external services.
                        </p>
                    </div>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <div>
                            <p>
                                @foreach (var provider in Model.ExternalLogins)
                                {
                                    <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                }
                            </p>
                        </div>
                    </form>
                }
            }
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
